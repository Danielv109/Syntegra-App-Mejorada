# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=syntegra_db
POSTGRES_USER=syntegra_user
POSTGRES_PASSWORD=syntegra_secure_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=true

# Ollama
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434
OLLAMA_MODEL=phi3:mini

# Text Analysis
USE_OLLAMA_FOR_SENTIMENT=true
SENTIMENT_BATCH_SIZE=10
SENTIMENT_MAX_WORKERS=3

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
